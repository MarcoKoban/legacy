# Environment variables for Geneweb API
# Copy this file to .env and configure for your environment

# Application Settings
GENEWEB_API_APP_NAME=Geneweb API
GENEWEB_API_APP_VERSION=0.1.0
GENEWEB_API_DEBUG=false
GENEWEB_API_HOST=0.0.0.0
GENEWEB_API_PORT=8000
GENEWEB_API_WORKERS=4

# SSL/TLS Configuration (Required for production)
GENEWEB_API_SSL_CERTFILE=/path/to/cert.pem
GENEWEB_API_SSL_KEYFILE=/path/to/key.pem
GENEWEB_API_SSL_CA_CERTS=/path/to/ca-certs.pem

# Security Settings
GENEWEB_SECURITY_FORCE_HTTPS=true
GENEWEB_SECURITY_HSTS_MAX_AGE=31536000
GENEWEB_SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
GENEWEB_SECURITY_HSTS_PRELOAD=true

# CORS Configuration (Restrict to your Angular frontend domains)
GENEWEB_SECURITY_CORS_ORIGINS=["https://your-frontend.domain.com","https://www.your-frontend.domain.com"]

# Rate Limiting
GENEWEB_SECURITY_RATE_LIMIT_PER_MINUTE=100
GENEWEB_SECURITY_RATE_LIMIT_BURST=200

# Content Security Policy
GENEWEB_SECURITY_CSP_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; frame-ancestors 'none';

# Secrets (Generate secure values for production)
GENEWEB_SECURITY_SECRET_KEY=your-very-secure-secret-key-here-min-32-chars
GENEWEB_SECURITY_ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# Certificate Pinning (Optional - add your cert fingerprints)
GENEWEB_SECURITY_CERT_PINS=["sha256-pin1","sha256-pin2"]

# Database Configuration
GENEWEB_DB_DATABASE_URL=postgresql://user:password@localhost:5432/geneweb
GENEWEB_DB_DATABASE_ECHO=false

# Logging Configuration
GENEWEB_LOG_LOG_LEVEL=INFO
GENEWEB_LOG_LOG_FORMAT=json
GENEWEB_LOG_LOG_FILE=/var/log/geneweb/api.log
GENEWEB_LOG_LOG_MAX_SIZE=10485760
GENEWEB_LOG_LOG_BACKUP_COUNT=5

# Monitoring Configuration
GENEWEB_MONITORING_ENABLE_METRICS=true
GENEWEB_MONITORING_METRICS_PATH=/metrics
GENEWEB_MONITORING_HEALTH_CHECK_PATH=/health
GENEWEB_MONITORING_GRAFANA_URL=https://your-grafana.domain.com
GENEWEB_MONITORING_GRAFANA_API_KEY=your-grafana-api-key

# Master encryption key for GDPR data protection
GENEWEB_MASTER_KEY=key-for-gdpr-data-protection