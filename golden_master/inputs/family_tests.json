{
  "test_suite": "Family Management",
  "description": "Test inputs for family relationships and structures",
  "tests": [
    {
      "id": "FAMILY-001",
      "description": "Simple family creation",
      "operations": [
        {
          "op": "create_family",
          "father": {"first_name": "Jean", "surname": "Dupont"},
          "mother": {"first_name": "Marie", "surname": "Martin"},
          "children": [
            {"first_name": "Pierre", "surname": "Dupont"},
            {"first_name": "Sophie", "surname": "Dupont"}
          ],
          "marriage_date": {"day": 15, "month": 6, "year": 1975}
        }
      ]
    },
    {
      "id": "FAMILY-002",
      "description": "Multi-generational family",
      "operations": [
        {
          "op": "create_family",
          "father": {"first_name": "Grand-père", "surname": "Dupont"},
          "mother": {"first_name": "Grand-mère", "surname": "Dubois"},
          "children": [
            {"first_name": "Père", "surname": "Dupont"}
          ],
          "marriage_date": {"day": 10, "month": 5, "year": 1950}
        },
        {
          "op": "create_family",
          "father": {"first_name": "Père", "surname": "Dupont"},
          "mother": {"first_name": "Mère", "surname": "Martin"},
          "children": [
            {"first_name": "Enfant", "surname": "Dupont"}
          ],
          "marriage_date": {"day": 20, "month": 8, "year": 1975}
        }
      ]
    },
    {
      "id": "FAMILY-003",
      "description": "Family validation",
      "operations": [
        {
          "op": "validate_family",
          "father": {"first_name": "Jean", "surname": "Dupont"},
          "mother": {"first_name": "Marie", "surname": "Martin"},
          "children": []
        },
        {
          "op": "validate_family",
          "father": null,
          "mother": {"first_name": "Marie", "surname": "Martin"},
          "children": [{"first_name": "Pierre", "surname": "Martin"}]
        }
      ]
    },
    {
      "id": "FAMILY-004",
      "description": "Relationship checks",
      "operations": [
        {
          "op": "is_ancestor",
          "ancestor": {"first_name": "Grand-père", "surname": "Dupont"},
          "descendant": {"first_name": "Enfant", "surname": "Dupont"}
        },
        {
          "op": "is_parent",
          "parent": {"first_name": "Père", "surname": "Dupont"},
          "child": {"first_name": "Enfant", "surname": "Dupont"}
        }
      ]
    },
    {
      "id": "FAMILY-005",
      "description": "Sibling relationships",
      "operations": [
        {
          "op": "are_siblings",
          "person1": {"first_name": "Pierre", "surname": "Dupont"},
          "person2": {"first_name": "Sophie", "surname": "Dupont"}
        },
        {
          "op": "get_siblings",
          "person": {"first_name": "Pierre", "surname": "Dupont"}
        }
      ]
    }
  ]
}
